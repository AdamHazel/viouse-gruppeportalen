@model LocalGroup

@{
    ViewBag.Title = "Rediger lokallag";
    Layout = "_Layout";
}

<h2>Rediger Lokallag</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" value="@Model.Id">
    <div class="form-group">
        <label asp-for="GroupName"></label>
        <input type="text" class="form-control" asp-for="GroupName" value="@Model.GroupName">
        <span asp-validation-for="GroupName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="text" class="form-control" asp-for="Address" value="@Model.Address">
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Postcode"></label>
        <input type="text" class="form-control" asp-for="Postcode" value="@Model.Postcode">
        <span asp-validation-for="Postcode"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input type="text" class="form-control" asp-for="City" value="@Model.City">
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label asp-for="County"></label>
        <input type="text" class="form-control" asp-for="County" value="@Model.City">
        <span asp-validation-for="County"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3" onsubmit="return confirm('Bekreft ønske til å endre lokallag informasjon')">Lagre endringer</button>
</form>
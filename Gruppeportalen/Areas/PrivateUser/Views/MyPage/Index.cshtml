@model Gruppeportalen.Areas.PrivateUser.Models.ViewModels.ApplicationPrivateUser

@{
Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/informationcard.css" />


<div class="main-container">
    <div class="sidebar">
        @Html.Partial("_PrivateUserSidebar")
    </div>
    <div class="main-content">
        <h2>MIN PROFIL</h2>

        <div class="card">
            <div class="card-header">
                <h3>@Model.Firstname @Model.Lastname</h3>
            </div>

            <div class="card-details">
                <p><strong>E-post:</strong> @Model.Email</p>
                <p><strong>Passord:</strong> <span style="margin-left: 5px;">********</span></p>
                <div style="text-align: right; margin-bottom: 15px;">
                    <a href="/Identity/Account/Manage/ChangePassword" class="small-link">Endre passord</a>
                    </div>
                <p><strong>Telefonnummer:</strong> @Model.Telephone</p>
                <p><strong>Adresse:</strong> @Model.Address</p>
                <p><strong>By:</strong> @Model.City</p>
                <p><strong>Postkode:</strong> @Model.Postcode</p>
                <p><strong>FÃ¸dselsdato:</strong> @Model.DateOfBirth.ToString("dd.MM.yyyy")</p>
            </div>

            <div class="card-actions">
                <a asp-action="Edit" class="btn btn-primary">Rediger</a>
            </div>
        </div>
    </div>
</div>

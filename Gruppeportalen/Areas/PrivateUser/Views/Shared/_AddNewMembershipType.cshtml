@model MembershipType

<div class="modal fade" id="addMembershipModal" tabindex="-1" aria-labelledby="addMembershipModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMembershipModalLabel">Legg til nytt medlemskap</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form asp-area="PrivateUser" asp-controller="MyLocalGroups" asp-action="AddMembershipType" method="post">
                    <input type="hidden" asp-for="LocalGroupId" id="LocalGroupId" />
                    <div class="form-group">
                        <label for="Name">Navn</label>
                        <input asp-for="Name" id="Name" class="form-control" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label for="Price">Pris</label>
                        <input asp-for="Price" id="Price" class="form-control" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label for="MembershipStart">Startdato</label>
                        <input asp-for="MembershipStart" id="MembershipStart" type="date" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="MembershipEnd">Sluttdato</label>
                        <input asp-for="MembershipEnd" id="MembershipEnd" type="date" class="form-control" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                        <button type="submit" class="btn btn-primary">Lagre</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>




@model Person 
<link rel="stylesheet" href="~/css/informationcard.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="card">
    <div class="card-header">
        <h3>@Model.Firstname @Model.Lastname </h3>
    </div>
    <div class="card-details">
        <p><strong>Fødselsdato:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
        <p><strong>Adresse:</strong> @Model.Address</p>
        <p><strong>Postnummer:</strong> @Model.Postcode</p>
        <p><strong>Sted:</strong> @Model.City</p>
    </div>


    <div class="person-memberships">
        <h4>Medlem i</h4>
    </div>

    <div class="card-actions">
        <form asp-action="Edit" method="get">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-warning">Rediger</button>
        </form>
        
        <!-- Del-knapp med data-person-id -->
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#shareModal" data-person-id="@Model.Id">Del</button>
        
        @if (!Model.PrimaryPerson) {
        
        <!-- Overfør-knappen med data-person-id -->
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#transferModal" data-person-id="@Model.Id">Overfør</button>

        <!-- Slett-knappen -->
        <form asp-action="Delete" method="post" onsubmit="return confirm('Er du sikker på at du vil slette denne personen?');">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-info">Slett</button>
        </form>
        }
    </div>
</div>

<!-- Modal for å dele personen -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shareModalLabel">Del personen med en annen bruker</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="SharePerson" method="post">
                    <!-- Dynamisk oppdatert skjult felt for personId -->
                    <input type="hidden" id="sharePersonId" name="personId" value="" />
                    <div class="mb-3">
                        <label for="email" class="form-label">E-postadresse</label>
                        <input type="email" class="form-control" name="email" placeholder="E-post til bruker å dele med" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                        <button type="submit" class="btn btn-primary">Del</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal for å overføre personen -->
<div class="modal fade" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transferModalLabel">Overfør personen til en annen bruker</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="TransferPerson" method="post">
                    <!-- Dynamisk oppdatert skjult felt for personId -->
                    <input type="hidden" id="transferPersonId" name="personId" value="" />
                    <div class="mb-3">
                        <label for="transferEmail" class="form-label">E-postadresse til ny eier</label>
                        <input type="email" class="form-control" id="transferEmail" name="email" placeholder="E-post til ny eier" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                        <button type="submit" class="btn btn-primary">Overfør</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // JavaScript for å sette riktig personId i delingsmodalen når Del-knappen trykkes
    const shareModal = document.getElementById('shareModal');
    shareModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const personId = button.getAttribute('data-person-id');
        document.getElementById('sharePersonId').value = personId;
    });

    // JavaScript for å sette riktig personId i overføringsmodalen når Overfør-knappen trykkes
    const transferModal = document.getElementById('transferModal');
    transferModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const personId = button.getAttribute('data-person-id');
        document.getElementById('transferPersonId').value = personId;
    });
</script>
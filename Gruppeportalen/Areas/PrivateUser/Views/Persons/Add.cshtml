@model Person
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="main-container">
<div class="sidebar">
    @Html.Partial("_PrivateUserSidebar")
</div>
<div class="main-content">
    <h2>Legg til ny Person</h2>

    <form asp-area="PrivateUser" asp-controller="Persons" asp-action="Add" method="post">
        @Html.HiddenFor(m => m.PrivateUserId)
        <div class="form-group">
            <label for="Firstname">Fornavn</label>
            <input type="text" class="form-control" id="Firstname" name="Firstname" value="@Model.Firstname" required/>
        </div>
        <div class="form-group">
            <label for="Lastname">Etternavn</label>
            <input type="text" class="form-control" id="Lastname" name="Lastname" value="@Model.Lastname" required/>
        </div>
        <div class="form-group">
            <label for="Address">Adresse</label>
            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address"/>
        </div>
        <div class="form-group">
            <label for="City">By</label>
            <input type="text" class="form-control" id="City" name="City" value="@Model.City"/>
        </div>
        <div class="form-group">
            <label for="Postcode">Postkode</label>
            <input type="text" class="form-control" id="Postcode" name="Postcode" value="@Model.Postcode"/>
        </div>
        <div class="form-group">
            <label for="DateOfBirth">FÃ¸dselsdato</label>
            <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")"/>
        </div>

        <button type="submit" class="btn btn-primary">Lagre</button>
        <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
    </form>
</div>
</div>